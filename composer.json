{
    "name": "spryker/opentelemetry",
    "type": "library",
    "description": "Opentelemetry module",
    "license": "proprietary",
    "require": {
        "open-telemetry/api": "^1.0",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/sem-conv": "^1.0",
        "php": ">=8.1",
        "spryker/kernel": "^3.30.0",
        "spryker/monitoring-extension": "^1.0.0",
        "spryker/symfony": "^3.0.0"
    },
    "require-dev": {
        "codeception/codeception": "*",
        "codeception/module-asserts": "*",
        "phpstan/phpstan": "*",
        "spryker/code-sniffer": "*",
        "spryker/testify": "*"
    },
    "autoload": {
        "psr-4": {
            "Spryker\\": "src/Spryker/"
        },
        "files": [
            "_register.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerTest\\": "tests/SprykerTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "authors": [
        {
            "name": "Spryker",
            "homepage": "https://spryker.com"
        }
    ],
    "scripts": {
        "cs-check": "phpcs --colors -p -s --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/,/_support/ src/ tests/",
        "cs-fix": "phpcbf --colors -p --extensions=php --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --ignore=/tests/_data/,/_support/ src/ tests/",
        "phpstan": "phpstan analyze",
        "test": "codecept build && codecept run"
    },
    "include-path": [
        "src/"
    ]
}
